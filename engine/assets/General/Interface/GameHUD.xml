<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="http://nifty-gui.svn.sourceforge.net/svnroot/nifty-gui/nifty/trunk/src/main/resources/nifty.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="GameHUD" controller="cargame.gui.GameHUDScreenController">
    <layer id="layer" backgroundColor="#0000" childLayout="vertical">
      <panel id="panel" height="15%" width="15%" align="left" valign="top" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="accelerateBrake_onClick()" onClickMouseMove="accelerateBrake_onClickMouseMove()" onRelease="accelerateBrake_onRelease()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="PlatformGame" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Accel / Brake" align="center" valign="center" />
      </panel>
    </layer>
    <layer id="layer" backgroundColor="#0000" childLayout="vertical">
      <panel id="panel" height="15%" width="15%" align="right" valign="bottom" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="steer_onClick()" onClickMouseMove="steer_onClickMouseMove()" onRelease="steer_onRelease()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Exit" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Left / Right" align="center" valign="center" />
      </panel>
      <panel id="panel" height="15%" width="15%" align="right" valign="bottom" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="gearbox()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Exit" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Gearbox" align="center" valign="center" />
      </panel>
    </layer>
  </screen>
</nifty>
