<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="http://nifty-gui.svn.sourceforge.net/svnroot/nifty-gui/nifty/trunk/src/main/resources/nifty.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="ControllerSelectorScreen" controller="cargame.gui.ControllerSelectorScreenController">
    <layer id="layer" backgroundColor="#003f" childLayout="vertical">
      <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="PlatformGame" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="CarGame - Controller Selector" align="center" valign="center" />
      </panel>
      <panel id="panel" height="15%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="start(Keyboard)"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Start" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Keyboard" align="center" valign="center" />
      </panel>
      <panel id="panel" height="15%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="start(Joystick/Gamepad)"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Start" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Joystick/Gamepad" align="center" valign="center" />
      </panel>
      <panel id="panel" height="15%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="start(Touch Screen)"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Start" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Touch Screen" align="center" valign="center" />
      </panel>
      <panel id="panel" height="15%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="exit()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!--text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Exit" align="center" valign="center" /-->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Back" align="center" valign="center" />
      </panel>
    </layer>
  </screen>
</nifty>
