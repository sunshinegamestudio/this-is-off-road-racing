<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="http://nifty-gui.svn.sourceforge.net/svnroot/nifty-gui/nifty/trunk/src/main/resources/nifty.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- start screen -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <screen id="LicenseViewMenuScreen" controller="cargame.gui.LicenseViewMenuScreenController">
    <layer id="layer" backgroundColor="#003f" childLayout="vertical">
      <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="resume()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!-- text id="text" font="aurulent-sans-17.fnt" color="#000f" text="License Acceptance" align="center" valign="center" / -->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="License Acceptance" align="center" valign="center" />
      </panel>
      <!-- control id="scrollbar" name="scrollPanel" horizontal="false" height="25%" -->
        <panel id="panel" height="7%" width="90%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true" >
          <!-- interact onClick="exit()"/ -->
          <effect>
            <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
            <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
            <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
          </effect>
          <!-- text id="text" font="aurulent-sans-17.fnt" color="#000f" text="License text, very long text GPL V 3" align="center" valign="center" wrap="true" / -->
          <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="GPL V3." align="center" valign="center" wrap="true" />
        </panel>
      <!-- /control -->
      <panel id="panel" height="25%" width="35%" align="center" valign="center" backgroundColor="#f60f" childLayout="center" visibleToMouse="true">
        <interact onClick="start()"/>
        <effect>
          <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
          <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
          <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
        </effect>
        <!-- text id="text" font="aurulent-sans-17.fnt" color="#000f" text="Accept" align="center" valign="center" / -->
        <text id="text" font="aurulent-sans-16.fnt" color="#000f" text="Back" align="center" valign="center" />
      </panel>
    </layer>
  </screen>
</nifty>
